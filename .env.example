# ============================================================
# REQUIRED ENVIRONMENT VARIABLES FOR HOSTINGER DEPLOYMENT
# ============================================================

# Database Configuration (Hostinger MySQL)
# Get this from your Hostinger MySQL database settings
DATABASE_URL=mysql://username:password@host:port/database_name

# Server Configuration
PORT=3000
NODE_ENV=production

# Session Secret (REQUIRED - generate a random string)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_random_secret_key_here_change_this_to_something_secure

# Session Max Age (optional, defaults to 24 hours)
SESSION_MAX_AGE=86400000

# Email Configuration (Resend API for sending invoices/estimates)
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=your_verified_email@yourdomain.com

# Public URL (your Hostinger domain)
PUBLIC_URL=https://yourdomain.com

# Optional: Price Scraping APIs
SCRAPINGFISH_API_KEY=your_api_key_here
VALUESERP_API_KEY=your_api_key_here
